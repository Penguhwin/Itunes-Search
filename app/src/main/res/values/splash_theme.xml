        <item name="windowSplashScreenBackground">@color/grey</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_app</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.ArtistInfo</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:navigationBarColor">@color/grey</item>
    </style>
</resources>